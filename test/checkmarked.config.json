{
  "tasks": {
    "bsc": {
      "command": "bsc $(args) -color always -i $(file)"
    },
    "bsc+reason": {
      "command": "bsc -pp \"../../node_modules/bs-platform/lib/refmt.exe --print binary\" $(args) -color always -i -impl $(file)"
    },
    "js": {
      "command": "acorn $(file)"
    }
  },
  "sources": [
    "**/*.md"
  ],
  "rules": {
    "ml": {
      "tasks": [{
        "name": "bsc",
        "arguments": "-I bs-json"
      }]
    },
    "reason": {
      "extension": "re",
      "tasks": [{
        "name": "bsc+reason",
        "arguments": "-I bs-json"
      }]
    },
    "js": {
      "language": "js",
      "tasks": ["js"]
    }
  }
}
